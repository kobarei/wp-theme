#!/bin/bash

RETVAL=0
prog=wpTool
dir=$pwd
wpTemplatePath=/path/to/your/wp-theme

deploy() {
  echo "Enter $wpTemplatePath"
  cd $wpTemplatePath
  git pull origin master
  grunt compile
  restartServer
  echo "Exit $wpTemplatePath"
}

restartServer() {
  sudo service php-fpm restart
  sudo service nginx restart
}

case "$1" in
  deploy)
    deploy
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $prog {deploy|restartServer}"
    RETVAL=2
esac

cd $dir
exit $RETVAL
